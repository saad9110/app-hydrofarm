<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/main_guide_view_guide_image_viewer"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:src="@drawable/hydrofarm_logo"/>

                <TextView
                    android:id="@+id/main_guide_view_guide_title_text_view"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Title of product"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:layout_below="@id/main_guide_view_guide_image_viewer"/>

                <Button
                    android:id="@+id/main_guide_view_guide_Selection_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
