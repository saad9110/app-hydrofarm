<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/updateProfilePicture"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_perm_identity_black_24dp"/>

        <Button
            android:id="@+id/UpdateBrowseProfilePictureBtn"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="Browse"
            android:textSize="15sp"
            android:gravity="center_vertical|center"
            android:padding="5dp"/>

        <Button
            android:id="@+id/UpdateRemoveProfilePictureBtn"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="Remove Picture"
            android:textSize="15sp"
            android:gravity="center_vertical|center"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/UpdateUserNameTxt"
                android:editable="false"
                android:layout_width="250dp"
                android:gravity="center|center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:inputType="text"
                android:hint="User Name"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/UpdateUserNameImgBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_edit_black_24dp"
                android:gravity="center_vertical|center"
                android:padding="5dp"
                android:clickable="true"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/registerEmailTxt"
                android:editable="false"
                android:layout_width="250dp"
                android:gravity="center|center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:textSize="15sp"/>


            <ImageView
                android:id="@+id/UpdateEmailImgBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_edit_black_24dp"
                android:gravity="center_vertical|center"
                android:padding="5dp"
                android:clickable="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/registerPhoneTxt"
                android:editable="false"
                android:layout_width="250dp"
                android:gravity="center|center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:inputType="phone"
                android:hint="Contact Number"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/UpdatePhoneImgBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_edit_black_24dp"
                android:gravity="center_vertical|center"
                android:padding="5dp"
                android:clickable="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/registerPasswordTxt"
                android:editable="false"
                android:layout_width="250dp"
                android:gravity="center|center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/UpdatePasswordImgBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_edit_black_24dp"
                android:gravity="center_vertical|center"
                android:padding="5dp"
                android:clickable="true"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal">

        <Button
        android:id="@+id/UpdateSubmitBtn"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginRight="6dp"
        android:text="Save"
        android:textSize="15sp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical|center"
        android:padding="5dp"/>

    <Button
        android:id="@+id/UpdateCancelBtn"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="6dp"
        android:text="Cancel"
        android:textSize="15sp"
        android:gravity="center_vertical|center"
        android:padding="5dp"/>

    </LinearLayout>

</LinearLayout>