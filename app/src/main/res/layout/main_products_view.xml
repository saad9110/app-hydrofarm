<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/main_product_view_Product_image_viewer"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:src="@drawable/hydrofarm_logo"/>

                <TextView
                    android:id="@+id/main_product_view_Product_title_text_view"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Title of product"
                    android:textSize="14dp"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:layout_below="@id/main_product_view_Product_image_viewer"/>

                <TextView
                    android:id="@+id/main_product_view_Product_price_text_view"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Price of product"
                    android:textSize="14dp"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:layout_below="@id/main_product_view_Product_title_text_view" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/main_product_view_Product_Selection_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
