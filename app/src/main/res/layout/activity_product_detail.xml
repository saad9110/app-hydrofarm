<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetail">

    <ImageView
        android:id="@+id/productDetailsImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/hydrofarm_logo"/>

    <ScrollView
        android:id="@+id/productScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/productDetailsImageView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ProductDetailProductTitleTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of product or plant"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/ProductDetailProductSeasonTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Season"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/ProductDetailProductProductTypeTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Type"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/ProductDetailProductProductNameTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price of product"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/ProductDetailProductDescriptionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Description"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/productDetailBuyNowBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="BUY NOW"
            android:textSize="16dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/productDetailAddtoCartBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD TO CART"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>